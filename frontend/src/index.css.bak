@tailwind base;@tailwind components;@tailwind utilities;@layer base {  html {    font-size: 18px;    /* Massive scale up from 16px */    scrollbar-gutter: stable;  }  body {    @apply bg-gray-50 text-gray-900 dark:bg-[#020205] dark:text-gray-100 transition-colors duration-300;    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;    line-height: 1.7;    scrollbar-gutter: stable;    /* Quantum Abyss background: pure dark with subtle deep geometric glows */    background-image:      radial-gradient(circle at 15% 50%, rgba(79, 70, 229, 0.08) 0%, transparent 50%),      radial-gradient(circle at 85% 30%, rgba(6, 182, 212, 0.08) 0%, transparent 50%);    background-attachment: fixed;  }  * {    @apply border-gray-200 dark:border-gray-800/60;  }  :focus-visible {    outline: none;    box-shadow: 0 0 0 3px rgb(99 102 241 / 0.4);    border-radius: 0.75rem;  }}@layer components {  /* ===== Buttons ===== */  .btn-primary {    @apply px-8 py-4 bg-gradient-to-r from-indigo-500 to-purple-600 hover:from-indigo-400 hover:to-purple-500 active:from-indigo-600 active:to-purple-700 text-white rounded-[2rem] font-bold text-lg transition-all duration-300 shadow-[0_8px_30px_rgb(99, 102, 241, 0.3)] hover:shadow-[0_12px_40px_rgb(99, 102, 241, 0.5)] hover:-translate-y-1 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none;  }  .btn-secondary {    @apply px-8 py-4 bg-white dark:bg-[#15151f] hover:bg-gray-50 dark:hover:bg-[#1e1e2d] text-gray-800 dark:text-gray-200 rounded-[2rem] font-bold text-lg transition-all duration-300 border border-gray-200 dark:border-indigo-500/20 shadow-md hover:shadow-xl hover:shadow-indigo-500/10 hover:-translate-y-1;  }  .btn-danger {    @apply px-8 py-4 bg-gradient-to-r from-red-600 to-rose-700 hover:from-red-500 hover:to-rose-600 text-white rounded-[2rem] font-bold text-lg transition-all duration-300 shadow-[0_8px_30px_rgb(225, 29, 72, 0.3)] hover:shadow-[0_12px_40px_rgb(225, 29, 72, 0.5)] hover:-translate-y-1;  }  .btn-ghost {    @apply px-6 py-3 hover:bg-gray-100/80 dark:hover:bg-white/5 rounded-[1.5rem] text-gray-600 dark:text-gray-300 font-bold text-base transition-all duration-200;  }  .btn-icon {    @apply p-4 hover:bg-gray-100 dark:hover:bg-white/10 rounded-full text-gray-500 dark:text-gray-300 transition-all duration-200;  }  /* ===== Cards (Bento Box) ===== */  .card {    @apply bg-white dark:bg-[#0c0c14]/80 rounded-[2.5rem] border border-gray-200/80 dark:border-indigo-500/10 backdrop-blur-3xl transition-all duration-300;    box-shadow: 0 8px 32px -4px rgba(0, 0, 0, 0.05);  }  .dark .card {    box-shadow: 0 12px 48px -12px rgba(0, 0, 0, 1), inset 0 1px 0 0 rgba(255, 255, 255, 0.02);  }  .card-hover {    @apply hover:-translate-y-1 hover:shadow-xl dark:hover:shadow-2xl dark:hover:shadow-indigo-500/10 dark:hover:border-indigo-500/30 cursor-pointer;  }  /* ===== Glass Panels ===== */  .glass-panel {    @apply bg-white/80 dark:bg-[#05050a]/60 backdrop-blur-3xl border border-gray-200/50 dark:border-white/5;  }  /* ===== Inputs ===== */  .input {    @apply w-full px-6 py-5 rounded-[1.5rem] border border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-[#0a0a0f] text-gray-900 dark:text-gray-100 focus:ring-4 focus:ring-indigo-500/30 focus:border-indigo-500/50 focus:bg-white dark:focus:bg-[#0f0f18] outline-none transition-all duration-300 text-lg placeholder:text-gray-400 dark:placeholder:text-gray-600 shadow-inner;  }  .label {    @apply block text-base font-bold text-gray-700 dark:text-gray-300 mb-3 tracking-widest uppercase opacity-80;  }  /* ===== Badges (Neon & Glassmorphism) ===== */  .badge {    @apply inline-flex items-center px-3 py-1 rounded-xl text-xs font-bold tracking-wider uppercase backdrop-blur-md;  }  .badge-next {    @apply badge bg-amber-100/80 text-amber-700 dark:bg-amber-900/40 dark:text-amber-300 border border-amber-200 dark:border-amber-700/50 shadow-lg shadow-amber-500/20;  }  .badge-running {    @apply badge bg-cyan-100/80 text-cyan-700 dark:bg-cyan-900/40 dark:text-cyan-300 border border-cyan-200 dark:border-cyan-500/50 shadow-lg shadow-cyan-500/30 animate-pulse;  }  .badge-completed {    @apply badge bg-emerald-100/80 text-emerald-700 dark:bg-emerald-900/40 dark:text-emerald-300 border border-emerald-200 dark:border-emerald-500/50 shadow-lg shadow-emerald-500/20;  }  .badge-failed {    @apply badge bg-rose-100/80 text-rose-700 dark:bg-rose-900/40 dark:text-rose-300 border border-rose-200 dark:border-rose-500/50 shadow-lg shadow-rose-500/20;  }  .badge-aborted {    @apply badge bg-orange-100/80 text-orange-700 dark:bg-orange-900/40 dark:text-orange-300 border border-orange-200 dark:border-orange-500/50;  }  .badge-idle {    @apply badge bg-gray-100/80 text-gray-600 dark:bg-gray-800/60 dark:text-gray-400 border border-gray-200 dark:border-gray-700/50;  }  .badge-human {    @apply badge bg-purple-100/80 text-purple-700 dark:bg-purple-900/40 dark:text-purple-300 border border-purple-200 dark:border-purple-500/50 shadow-lg shadow-purple-500/30 animate-pulse;  }  /* ===== Sidebar ===== */  .sidebar {    @apply flex flex-col glass-panel border-r;  }}/* ===== Scrollbar ===== */@layer utilities {  .scrollbar-thin {    scrollbar-width: thin;    scrollbar-color: theme('colors.gray.300') transparent;  }  .dark .scrollbar-thin {    scrollbar-color: theme('colors.gray.800') transparent;  }}/* DnD styles */.dragging {  @apply opacity-70 shadow-2xl ring-2 ring-indigo-500 scale-105 transition-transform duration-200 cursor-grabbing;}.drag-over {  @apply ring-2 ring-indigo-400 ring-offset-4 ring-offset-white dark:ring-offset-[#09090b];}/* Custom scrollbar for webkit */.scrollbar-thin::-webkit-scrollbar {  width: 6px;  height: 6px;}.scrollbar-thin::-webkit-scrollbar-track {  background: transparent;}.scrollbar-thin::-webkit-scrollbar-thumb {  background-color: theme('colors.gray.300');  border-radius: 9999px;}.dark .scrollbar-thin::-webkit-scrollbar-thumb {  background-color: theme('colors.gray.800');}